@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product";
}

<h1>Product</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Name
            </th>
            
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
          <tr>
            
            <td>
                @item.Name
            </td>
           
            
            <td>
                @item.Price.ToString()
            </td>
            <td>
                    <img src="~/media/products/@item.Image  " width=" 100" alt=" No Image" />
            </td>
            <td>
                @item.Category.Name 
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id=@item.Id>Edit</a>
                    <a asp-action="Detail" asp-route-id=@item.Id>Detail</a>
                  
              
                        <a class="ConfirmDeletion" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
            </td>
         </tr>
        }
    </tbody>
</table>

<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages" page-target="/Admin/Product" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
</div>